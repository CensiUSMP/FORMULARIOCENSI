                    @if (Model.ArchivoName.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                    {
                        <iframe src="@Url.Action("GetArchivo", new { id = Model.Id })" width="100%" height="600px"
                            frameborder="0"></iframe>
                    }
