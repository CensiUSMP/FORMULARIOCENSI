@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}


<section id="catalogue" class="catalogue section-bg">
<div class="row">
    
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="formulario">
            <div class="container">
            <h1>@ViewData["Title"]</h1>
            <hr>
             
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group formM">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group formM">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group formM">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="get-started" style="text-align: center; margin-top: 20px; margin-bottom: 20px;">
            <input type="submit" value="Registrate" class="button"> 
            </div>
        </form>
   
</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
